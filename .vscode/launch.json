  "version": "0.2.0",
  "compounds": [
    {
      "name": "Run backend and services",
      "configurations": [
        "Launch server",
        "Launch playersApi",
        "Launch teamApi"
      ]
    },
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch server",
      "program": "${workspaceFolder}/server/index.js",
      "env": {
        "TEAMS_PATH":"localhost:4000/teams",
        "PLAYERS_PATH": "localhost:5050/players"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch playersApi",
      "program": "${workspaceFolder}/playersApi/index.js",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch teamApi",
      "program": "${workspaceFolder}/teamApi/index.js",
    }
  ]
}